@page "/button-test"

<h3>@title</h3>

<div class="form-group">

    <div class="container">
        <div class="btn-toolbar">
            <CustomEditButtonComponent OnClick="changeTitle" />

            <CustomEditButtonComponent Caption="Edit Caption" Color="danger" Icon="far fa-edit" IsSmall="false" />

            <AddNewButtonComponent />
        </div>
    </div>

</div>
@code {
    [CascadingParameter]
    IModalService? Modal { get; set; }

    private String? title = "";

    private void changeTitle()
    {
        Modal?.Show<Counter>("Counter Popup Page");
    }
}
